{
  "manifest_version": 3,
  "name": "RollCloud: DiceCloud + Roll20 + Discord Integration",
  "version": "2.2.2",
  "description": "Sync DiceCloud V2 characters to Roll20 with Discord turn notifications via Pip 2",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://dicecloud.com/*",
    "https://*.dicecloud.com/*",
    "https://app.roll20.net/*",
    "https://roll20.net/*",
    "https://gkfpxwvmumaylahtxqrk.supabase.co/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://dicecloud.com/*",
        "https://*.dicecloud.com/*"
      ],
      "js": [
        "src/content/dicecloud.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://app.roll20.net/*"
      ],
      "js": [
        "src/content/roll20.js",
        "src/content/character-sheet-overlay.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "src/options/welcome.html",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/popup-sheet.html",
        "src/popup-sheet.js"
      ],
      "matches": [
        "https://app.roll20.net/*"
      ]
    }
  ],
  "key": ""
}
