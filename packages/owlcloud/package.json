{
  "name": "@carmaclouds/owlcloud",
  "version": "2.1.0",
  "description": "OwlCloud - Browser extension for DiceCloud with Owlbear Rodeo integration",
  "type": "module",
  "scripts": {
    "build": "node build.js",
    "build:firefox": "node build.js --firefox",
    "build:watch": "node build.js --watch",
    "build:watch:firefox": "node build.js --watch --firefox",
    "build:prod": "node build.js --minify",
    "build:prod:firefox": "node build.js --minify --firefox",
    "dev": "npm run build:watch & web-ext run --source-dir=dist --verbose",
    "dev:firefox": "npm run build:watch:firefox & web-ext run --source-dir=dist --firefox=firefox --verbose",
    "dev:firefox-dev": "npm run build:watch:firefox & web-ext run --source-dir=dist --firefox=firefoxdeveloperedition --verbose",
    "package": "npm run build:prod && web-ext build --source-dir=dist --artifacts-dir=./web-ext-artifacts",
    "package:firefox": "npm run build:prod:firefox && web-ext build --source-dir=dist --artifacts-dir=./web-ext-artifacts-firefox",
    "lint": "web-ext lint --source-dir=dist",
    "sign": "npm run build:prod && web-ext sign --source-dir=dist --api-key=$AMO_JWT_ISSUER --api-secret=$AMO_JWT_SECRET",
    "sign:firefox": "npm run build:prod:firefox && web-ext sign --source-dir=dist --api-key=$AMO_JWT_ISSUER --api-secret=$AMO_JWT_SECRET",
    "clean": "rm -rf dist web-ext-artifacts web-ext-artifacts-firefox"
  },
  "keywords": [
    "dicecloud",
    "owlbear",
    "browser-extension",
    "dnd",
    "webextension"
  ],
  "license": "MIT",
  "dependencies": {
    "@carmaclouds/core": "^2.1.0"
  },
  "devDependencies": {
    "@carmaclouds/build-tools": "^2.1.0",
    "esbuild": "^0.19.0",
    "esbuild-plugin-copy": "^2.1.1",
    "web-ext": "^7.0.0"
  }
}
