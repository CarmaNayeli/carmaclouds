{
  "manifest_version": 2,
  "name": "CarmaClouds: DiceCloud + VTT Integration",
  "version": "2.4.0",
  "description": "Sync DiceCloud V2 characters to Roll20, Owlbear Rodeo, and Foundry VTT with cloud storage",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "cookies",
    "https://dicecloud.com/*",
    "https://*.dicecloud.com/*",
    "https://app.roll20.net/*",
    "https://roll20.net/*",
    "https://*.owlbear.rodeo/*",
    "https://owlbear.rodeo/*"
  ],
  "optional_permissions": [
    "webNavigation"
  ],
  "background": {
    "scripts": [
      "src/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://dicecloud.com/*",
        "https://*.dicecloud.com/*"
      ],
      "js": [
        "src/content/dicecloud.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://app.roll20.net/*"
      ],
      "js": [
        "src/content/roll20.js",
        "src/content/character-sheet-overlay.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://*.owlbear.rodeo/*",
        "https://owlbear.rodeo/*"
      ],
      "js": [
        "src/content/owlbear.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    "owlbear-extension/*",
    "common/*",
    "modules/*",
    "src/popup-sheet.html",
    "src/popup-sheet.js",
    "src/content/dicecloud-extraction.js"
  ]
}
